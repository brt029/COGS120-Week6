	<form id="addFriendForm" role="form" method="get" action="/add">
		<h3>Create your own profile</h3>
	    <div class="form-group">
	      <label for="name">Name:</label>
	      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
	    </div>

	    <div class="form-group">
	      <label for="gender">Gender:</label>
	      <input type="text" class="form-control" id="gender" placeholder="Gender" name="gender">
	    </div>

	    <div class="form-group">
	      <label for="height">Height:</label>
	      <input type="text" class="form-control" id="height" placeholder="Height" name="height">
	    </div>

<div class="form-group">
	      <label for="weight">Weight:</label>
	      <input type="text" class="form-control" id="weight" placeholder="Weight" name="weight">
	    </div>

  <div class="form-group">
	      <label for="confident">How confident are you?</label>
	      <input type="text" class="form-control" id="confident" placeholder="Not confident, Confident, Very confident..." name="confident">
	    </div>

	       <div class="form-group">
	      <label for="days">How many days a week do you plan on exercising?</label>
	      <input type="text" class="form-control" id="days" placeholder="1 to 7" name="days">
	    </div>

	       <div class="form-group">
	      <label for="accomplish">What are you hoping to accomplish in the gym?</label>
	      <input type="text" class="form-control" id="accomplish" placeholder="Goals" name="accomplish">
	    </div>

	    <input type="submit" id="submitBtn" class="btn btn-default" value="Create the profile"></input>
	</form>
</body>
</div>
